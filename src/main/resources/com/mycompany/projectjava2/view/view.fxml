<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.projectjava2.controller.ViewController">

    <!-- ===== TOP TITLE ===== -->
    <top>
        <Label style="-fx-font-size:20px; -fx-font-weight:bold; -fx-padding:10;" text="Book Management System" />
    </top>

    <!-- ===== CENTER ===== -->
    <center>
        <VBox spacing="10" style="-fx-background-color: lightblue;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- Form + Table -->
            <HBox spacing="10">

                <!-- LEFT: FORM -->
                <VBox prefHeight="461.0" prefWidth="243.0" spacing="10">
                    <Label style="-fx-font-weight:bold" text="Book Details" />

                    <TextField fx:id="titleField" promptText="Title" />
               <TextField fx:id="catField" layoutX="10.0" layoutY="108.0" promptText="Category" />
                    <TextField fx:id="authorField" promptText="Author" />
                    <TextField fx:id="priceField" promptText="Price" />
               <TextField fx:id="qtyField" layoutX="10.0" layoutY="179.0" promptText="Quantity" />
               <TextField fx:id="pbField" layoutX="10.0" layoutY="214.0" promptText="Publish year" />

                    <HBox spacing="10">
                        <Button onAction="#handleAdd" text="Add" />
                        <Button onAction="#handleUpdate" text="Update" />
                    </HBox>
                </VBox>

                <!-- RIGHT: TABLE -->
                <VBox spacing="5" HBox.hgrow="ALWAYS">

                    <HBox spacing="5">
                        <Label text="Search:" />
                        <TextField fx:id="searchField" HBox.hgrow="ALWAYS" />
                        <Button onAction="#handleSearch" text="Search" />
                    </HBox>

                    <TableView fx:id="bookTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colId" maxWidth="100" minWidth="50" text="ID" />
                            <TableColumn fx:id="colTitle" minWidth="150" text="Title" />
                            <TableColumn fx:id="colcat" minWidth="120" text="Category" />
                            <TableColumn fx:id="colAuthor" minWidth="120" text="Author" />
                            <TableColumn fx:id="colPrice" maxWidth="120" minWidth="100" text="Price" />
                            <TableColumn fx:id="colQty" maxWidth="120" minWidth="100" text="Quantity" />
                            <TableColumn fx:id="colPub" minWidth="80" text="Publish year" />
                        </columns>
                    </TableView>

                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Button onAction="#handleImport" text="Import CSV" />
                        <Button onAction="#handleExport" text="Export CSV" />
                        <Button onAction="#handleDelete" text="Delete" />
                    </HBox>

                </VBox>
            </HBox>

            <!-- AI CHAT -->
            <VBox spacing="5">
                <Label style="-fx-font-weight:bold" text="AI Chatbot" />

                <TextArea fx:id="chatArea" editable="false" prefHeight="150" />

                <HBox spacing="5">
                    <TextField fx:id="chatInput" HBox.hgrow="ALWAYS" />
                    <Button onAction="#handleSendAI" text="Send" />
                </HBox>
            </VBox>

        </VBox>
    </center>

</BorderPane>
