<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="5" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.projectjava2.controller.ChatboxController">
    <Label style="-fx-font-weight:bold" text="AI Chatbot" />

    <TextArea fx:id="chatArea" editable="false" prefHeight="150" />

    <HBox spacing="5">
        <TextField fx:id="chatInput" HBox.hgrow="ALWAYS" />
        <Button onAction="#handleSendAI" text="Send" />
    </HBox>
</VBox>
